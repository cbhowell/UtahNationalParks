<AnchorPane minHeight="600.0" minWidth="800.0" opacity="0.93" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utahNationalParks.Controller">
   <Button layoutX="496.0" layoutY="26.0" mnemonicParsing="false" onMouseClicked="#submit" prefHeight="34.0" prefWidth="133.0" text="SUBMIT" textFill="#08b562">
      <font>
         <Font size="17.0" />
      </font>
      <effect>
         <Reflection />
      </effect>
   </Button>
   <Button layoutX="645.0" layoutY="26.0" mnemonicParsing="false" onMouseClicked="#reset" prefHeight="34.0" prefWidth="90.0" text="RESET" textFill="#b90303">
      <font>
         <Font size="17.0" />
      </font>
      <effect>
         <Reflection />
      </effect>
   </Button>
    <MenuButton fx:id="startMenuBTN" alignment="CENTER" layoutX="24.0" layoutY="26.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="216.0" text="Start Location" textAlignment="CENTER">
      <items>
          <MenuItem mnemonicParsing="false" onAction="#startArchesSelected" text="Arches " />
          <MenuItem mnemonicParsing="false" onAction="#startBryceSelected" text="Bryce" />
          <MenuItem mnemonicParsing="false" onAction="#startCanyonLandsSelected" text="Canyonlands" />
          <MenuItem mnemonicParsing="false" onAction="#startCapitolReefSelected" text="Capitol Reef" />
          <MenuItem mnemonicParsing="false" onAction="#startZionSelected" text="Zion" />
      </items>
        <font>
          <Font size="17.0" />
        </font>
    </MenuButton>
    <MenuButton fx:id="destMenuBTN" alignment="CENTER" layoutX="264.0" layoutY="26.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="206.0" text="Destination" textAlignment="CENTER">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#destArchesSelected" text="Arches" />
          <MenuItem mnemonicParsing="false" onAction="#destBryceSelected" text="Bryce" />
          <MenuItem mnemonicParsing="false" onAction="#destCanyonLandsSelected" text="Canyonlands" />
          <MenuItem mnemonicParsing="false" onAction="#destCapitolReefSelected" text="Capitol Reef" />
          <MenuItem mnemonicParsing="false" onAction="#destZionSelected" text="Zion" />
        </items>
        <font>
          <Font size="17.0" />
        </font>
    </MenuButton>
   <Label fx:id="displayLabel" layoutX="24.0" layoutY="84.0" text="*" wrapText="true">
      <font>
         <Font size="17.0" />
      </font>
   </Label>
   <Label fx:id="distanceDisplay" layoutX="24.0" layoutY="144.0" text="*" wrapText="true">
      <font>
         <Font size="17.0" />
      </font>
   </Label>
   <effect>
      <Glow />
   </effect>
</AnchorPane>
